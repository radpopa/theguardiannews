<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/list_item_card_view_margin"
        app:cardCornerRadius="@dimen/list_item_card_view_corner_radius"
        android:elevation="@dimen/list_item_card_view_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/list_item_card_view_image_width"
                    android:layout_height="@dimen/list_item_card_view_image_height"
                    android:layout_marginTop="@dimen/list_item_card_view_image_margin_top"
                    android:layout_marginLeft="@dimen/list_item_card_view_image_margin_left"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/article_thumbnail_image_view"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:textSize="@dimen/list_item_card_view_section_text_size"
                    android:textColor="@color/secondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/list_item_card_view_section_text_margin_left"
                    android:id="@+id/article_section_text_view"
                    android:layout_toRightOf="@id/article_thumbnail_image_view"
                    android:layout_alignBottom="@id/article_thumbnail_image_view"/>

                <TextView
                    android:textSize="@dimen/list_item_card_view_title_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/list_item_card_view_title_text_margin_top"
                    android:layout_marginBottom="@dimen/list_item_card_view_title_text_margin_bottom"
                    android:layout_marginLeft="@dimen/list_item_card_view_title_text_margin_left"
                    android:layout_marginRight="@dimen/list_item_card_view_title_text_margin_right"
                    android:id="@+id/article_title_text_view"
                    android:layout_below="@id/article_thumbnail_image_view"/>

                <TextView
                    android:textSize="@dimen/list_item_card_view_time_text_size"
                    android:textColor="@color/secondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/list_item_card_view_time_text_margin_right"
                    android:layout_marginTop="@dimen/list_item_card_view_time_text_margin_top"
                    android:id="@+id/article_publish_time_text_view"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:text="contributor"
                    android:textSize="@dimen/list_item_card_view_contributor_text_size"
                    android:textStyle="italic"
                    android:textColor="@color/secondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/list_item_card_view_contributor_text_margin_right"
                    android:layout_marginTop="@dimen/list_item_card_view_contributor_text_margin_top"
                    android:id="@+id/article_contributor_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/article_publish_time_text_view"/>

            </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>